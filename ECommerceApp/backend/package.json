{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "E-commerce Backend API with Push Notifications",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:fresh": "bash start-server.sh",
    "dev:win": "set NODE_ENV=development && nodemon server.js",
    "start:win": "set NODE_ENV=production && node server.js",
    "prod": "cross-env NODE_ENV=production node server.js > logs/app.log 2>&1",
    "seed": "node utils/seed.js",
    "create-admin": "node utils/createAdminUser.js",
    "kill-port": "npx kill-port 5000",
    "logs": "tail -f logs/app.log",
    "logs:error": "grep ERROR logs/*.log"
  },
  "keywords": [
    "ecommerce",
    "api",
    "push-notifications",
    "firebase"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.10.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.1",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.0.1"
  }
}
